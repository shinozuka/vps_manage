<%= form_for(@project) do |f| %>

  <div class="field">
    <%= f.label :name %><abbr id="required">*</abbr><br />
    <%= f.text_field :name %>
    <%= error_message_on(:project, :name, t('activerecord.attributes.project.name')) %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
    <%= error_message_on(:project, :note, t('activerecord.attributes.project.note')) %>
  </div>
  <div class="actions">
    <%= f.submit :disable_with => t('page.wait') %>
  </div>
<% end %>
