<div id="content_detail">
  <h4><%= t('page.listing', :model => t('activerecord.models.virtual_environment')) %></h5>
  <p id="notice"><%= notice %></p>

  <div id="content_list">
    <table class="index">
      <tr>
        <th>
          <%= t('activerecord.attributes.virtual_environment.name') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'name', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'name', :order => 'desc')) %>
        </th>
        <th>
          <%= t('activerecord.models.machine') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'machine', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'machine', :order => 'desc')) %>
        </th>
        <th>
          <%= t('activerecord.attributes.virtual_environment.ip') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'ip', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'ip', :order => 'desc')) %>
        </th>
        <th>
          <%= t('activerecord.attributes.virtual_environment.tap') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'tap', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'tap', :order => 'desc')) %>
        </th>
        <th>
          <%= t('activerecord.attributes.virtual_environment.mac') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'mac', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'mac', :order => 'desc')) %>
        </th>
        <th>
          <%= t('activerecord.attributes.virtual_environment.vnc') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'vnc', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'vnc', :order => 'desc')) %>
        </th>
        <th>
          <%= t('activerecord.attributes.virtual_environment.image_name') %>
          <%= link_to image_tag('arrow_up.png', :alt => t('page.asc'), :title => t('page.asc')), url_for(params.merge(:sort_by => 'image_name', :order => 'asc')) %>
          <%= link_to image_tag('arrow_down.png', :alt => t('page.desc'), :title => t('page.desc')), url_for(params.merge(:sort_by => 'image_name', :order => 'desc')) %>
        </th>
        <th></th>
      </tr>

      <% @virtual_environments.each do |virtual_environment| %>
        <tr class="line<%= cycle("0", "1") -%>">
          <td><%= link_to virtual_environment.name, virtual_environment %></td>
          <td><%= link_to virtual_environment.machine.name, virtual_environment.machine if virtual_environment.machine %></td>
          <td><%= virtual_environment.ip %></td>
          <td><%= virtual_environment.tap %></td>
          <td><%= virtual_environment.mac %></td>
          <td><%= virtual_environment.vnc %></td>
          <td><%= virtual_environment.image_name %></td>
          <td>
            <%= link_to t('page.edit'), edit_virtual_environment_path(virtual_environment) %>
            <%= link_to t('page.destroy'), virtual_environment, confirm: t('page.are_you_sure'), method: :delete %>
          </td>
        </tr>
      <% end %>
    </table>
    <br />
    <%= will_paginate @virtual_environments, :previous_label=>'<', :next_label=>'>' %>
</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.virtual_environment')), new_virtual_environment_path %></li>
  </ul>
</div>
